@page
@model Bokking_Airline_Tickets.Pages.IndexModel
@{
    ViewData["Title"] = "Главная";
}

<!-- Герой секция -->
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-4">Путешествуйте с комфортом</h1>
        <p class="lead mb-4">Найдите лучшие предложения на авиабилеты по всему миру</p>
        <a asp-page="/Flights/Index" class="btn btn-primary btn-lg">Найти рейсы</a>
    </div>
</section>

<!-- Форма поиска -->
<section class="container mb-5" id="search">
    <div class="search-form">
        <form method="get" asp-page="/Flights/Index">
            <div class="row g-2 align-items-end">
                <div class="col-md-6 col-lg-2">
                    <label class="form-label small mb-1">Откуда</label>
                    <input type="text" class="form-control form-control-sm" name="departureCity" placeholder="Город вылета">
                </div>
                <div class="col-md-6 col-lg-2">
                    <label class="form-label small mb-1">Куда</label>
                    <input type="text" class="form-control form-control-sm" name="arrivalCity" placeholder="Город назначения">
                </div>
                <div class="col-md-6 col-lg-2">
                    <label class="form-label small mb-1">Туда</label>
                    <input type="date" class="form-control form-control-sm" name="departureDate">
                </div>
                <div class="col-md-6 col-lg-2">
                    <label class="form-label small mb-1">Обратно</label>
                    <input type="date" class="form-control form-control-sm" name="returnDate">
                </div>
                <div class="col-md-6 col-lg-2">
                    <label class="form-label small mb-1">Пассажиры</label>
                    <select class="form-select form-select-sm" name="passengers">
                        <option value="1">1 пассажир</option>
                        <option value="2">2 пассажира</option>
                        <option value="3">3 пассажира</option>
                        <option value="4">4 пассажира</option>
                    </select>
                </div>
                <div class="col-md-6 col-lg-2">
                    <button type="submit" class="btn btn-primary w-100 btn-sm">Найти</button>
                </div>
            </div>
        </form>
    </div>
</section>

<!-- Популярные направления -->
<section class="container mb-5">
    <h2 class="section-title">Популярные направления</h2>
    <div class="row g-4">
        <!-- Париж -->
        <div class="col-md-6 col-lg-3">
            <div class="destination-card card">
                <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Париж">
                <div class="card-body">
                    <h5 class="card-title">Париж, Франция</h5>
                    <p class="card-text">Отличные цены на рейсы в Париж</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price-tag">от 12 490 ₽</span>
                        @{
                            var flightParis = Model.GetFlightByRoute("Москва", "Париж");
                            if (flightParis != null)
                            {
                                <a asp-page="/Flights/Details" asp-route-id="@flightParis.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            }
                            else
                            {
                                <span class="text-muted small">Рейс пока не доступен</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Токио -->
        <div class="col-md-6 col-lg-3">
            <div class="destination-card card">
                <img src="https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Токио">
                <div class="card-body">
                    <h5 class="card-title">Токио, Япония</h5>
                    <p class="card-text">Откройте для себя культуру Японии</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price-tag">от 24 990 ₽</span>
                        @{
                            var flightTokyo = Model.GetFlightByRoute("Москва", "Токио");
                            if (flightTokyo != null)
                            {
                                <a asp-page="/Flights/Details" asp-route-id="@flightTokyo.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            }
                            else
                            {
                                <span class="text-muted small">Рейс пока не доступен</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Нью-Йорк -->
        <div class="col-md-6 col-lg-3">
            <div class="destination-card card">
                <img src="https://images.unsplash.com/photo-1496442226666-8d4d0e62e6e9?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Нью-Йорк">
                <div class="card-body">
                    <h5 class="card-title">Нью-Йорк, США</h5>
                    <p class="card-text">Город, который никогда не спит</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price-tag">от 19 990 ₽</span>
                        @{
                            var flightNY = Model.GetFlightByRoute("Санкт-Петербург", "Нью-Йорк");
                            if (flightNY != null)
                            {
                                <a asp-page="/Flights/Details" asp-route-id="@flightNY.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            }
                            else
                            {
                                <span class="text-muted small">Рейс пока не доступен</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Бали -->
        <div class="col-md-6 col-lg-3">
            <div class="destination-card card">
                <img src="https://images.unsplash.com/photo-1518548419970-58e3b4079ab2?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Бали">
                <div class="card-body">
                    <h5 class="card-title">Бали, Индонезия</h5>
                    <p class="card-text">Тропический рай для отдыха</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price-tag">от 21 490 ₽</span>
                        @{
                            var flightBali = Model.GetFlightByRoute("Москва", "Бали");
                            if (flightBali != null)
                            {
                                <a asp-page="/Flights/Details" asp-route-id="@flightBali.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            }
                            else
                            {
                                <span class="text-muted small">Рейс пока не доступен</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

