<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroBook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark main-navbar">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-plane-departure me-2"></i>
                    <span class="fw-bold">AeroBook</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Flights/Index">Рейсы</a>
                        </li>
                        <!-- Кнопки "Направления" и "Войти" удалены -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-4 mb-4">
                    <h5 class="mb-3">О нас</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-page="/About/Company" class="text-white text-decoration-none">Компания</a></li>
                        <li class="mb-2"><a asp-page="/About/Team" class="text-white text-decoration-none">Команда</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4">
                    <h5 class="mb-3">Помощь</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-page="/Help/FAQ" class="text-white text-decoration-none">FAQ</a></li>
                        <li class="mb-2"><a asp-page="/Help/Rules" class="text-white text-decoration-none">Правила</a></li>
                        <li class="mb-2"><a asp-page="/Help/Support" class="text-white text-decoration-none">Поддержка</a></li>
                    </ul>
                </div>
            </div>

            <hr class="mt-4 mb-4">

            <div class="text-center">
                <p class="mb-0">© 2025 AeroBook. Все права защищены.</p>
            </div>

            <div class="text-center mt-4">
                <a asp-page="/Admin/Flights" class="btn btn-outline-secondary">Панель администратора</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                img.addEventListener('error', function() {
                    const altText = this.alt || 'Изображение';
                    this.src = `https://placehold.co/400x300/1a73e8/white?text=${encodeURIComponent(altText)}`;
                    this.style.objectFit = 'cover';
                });
            });
        });
    </script>

</body>
</html>
