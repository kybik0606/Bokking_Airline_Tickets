@page
@model Bokking_Airline_Tickets.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Авторизация";
    Layout = "_Layout";
}

<div class="login-page">
    <div class="overlay"></div>
    <div class="login-container">
        <div class="card shadow-lg p-4 rounded-4">
            <h2 class="text-center mb-4">Войти</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Имя пользователя</label>
                    <input asp-for="Username" class="form-control" placeholder="Введите имя">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Войти</button>
                <a asp-page="/Auth/Register" class="btn btn-outline-secondary w-100">Зарегистрироваться</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
